{{#extends "base"}}

{{#block "title"}}
Doctors
{{/block}}


{{#block "content"}}
<h2>Doctors</h2>
<form method="post">
    <div class="row my-4">
        <div class="col-auto">
            <label class="col-form-label">Search By Clinic:</label>
        </div>
        <div class="col-auto">
            <select class="form-select" aria-label="Select Clinic" name="clinic_id">
                {{#each clinics}}
                    <option value="{{this.clinic_id}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="col-auto">
            <input type="submit" value="Search" class="btn btn-primary">
            <a href="/doctors" class="btn btn-primary">Reset</a>
        </div>
    </div>
</form>
<div class="table-responsive">
    <table class="table table-striped table-dark table-hover align-middle">
        <thead>
            <th>Doctor Name</th>
            <th>Clinic</th>
            <th>Specialties</th>
            <th></th>
            <th></th>
        </thead>
        <tbody>
            {{#each doctors}}
            <tr>
                <td>{{this.D_name}}</td>
                <td>{{this.C_name}}</td>
                <td>{{this.Specialties}}</td>
                <td><a href="/doctors/edit/{{this.doctor_id}}" class="btn btn-warning">Edit</a></td>
                <td><a href="/doctors/delete/{{this.doctor_id}}" class="btn btn-danger">Delete</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<a href="/doctors/create" class="btn btn-primary">Create Doctor</a>
<a href="/doctors/specialty" class="btn btn-primary">Create Specialty</a>
{{/block}}

{{/extends}}