{{#extends "base"}}

{{#block "title"}}
Create Appointment
{{/block}}


{{#block "content"}}
<h2>Create Appointment</h2>
<form method="post">
    <div>
        <label>Patient:</label>
        <select class="form-select" aria-label="Select Patient" name="patient_id">
            {{#each patients}}
                <option value="{{this.patient_id}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>
    <div>
        <label>Doctor:</label>
        <select class="form-select" aria-label="Select Doctor" name="doctor_id">
            {{#each doctors}}
                <option value="{{this.doctor_id}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>
    <div>
        <label>Appointment Type:</label>
        <select class="form-select" aria-label="Select Appointment Type" name="appt_type_id">
            {{#each appt_types}}
                <option value="{{this.appt_type_id}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>
    <div>
        <label>Date:</label>
        <input type="date" class="form-select" name="date"/>
    </div>
    <div>
        <label>Time:</label>
        <input type="time" class="form-select" name="time"/>
    </div>
    
    <a href="/appointments" class="btn btn-warning">Cancel</a>
    <input type="submit" value="Create Appointment" class="btn btn-primary my-4">
</form>
{{/block}}

{{/extends}}