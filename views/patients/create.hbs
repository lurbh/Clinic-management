{{#extends "base"}}

{{#block "title"}}
Create Patient
{{/block}}


{{#block "content"}}
<h2>Create Patient</h2>
<form method="post">
    <div>
        <label>Patient Name:</label>
        <input type="text" name="name" id="name" class="form-control">
    </div>
    <div>
        <label>Phone Number:</label>
        <input type="text" name="phone" id="phone" class="form-control">
    </div>
    <div>
        <label>E-Mail:</label>
        <input type="text" name="email" id="email" class="form-control">
    </div>
    
    <a href="/patients" class="btn btn-warning">Cancel</a>
    <input type="submit" value="Create Patient" class="btn btn-primary my-4">
</form>
{{/block}}

{{/extends}}