{{#extends "base"}}

{{#block "title"}}
Patients
{{/block}}


{{#block "content"}}
<h2>Patients</h2>
<form method="get">
    <div class="row my-4">
        <div class="col-auto">
            <label class="col-form-label">Search:</label>
        </div>
        <div class="col-auto">
            <input type="text" name="search" id="search" class="form-control">
        </div>
        <div class="col-auto">
            <input type="submit" value="Search" class="btn btn-primary">
            <a href="/patients" class="btn btn-primary">Reset</a>
        </div>
    </div>
</form>
<div class="table-responsive">
    <table class="table table-striped table-dark table-hover align-middle">
        <thead>
            <th>Patient Name</th>
            <th>Phone Number</th>
            <th>E-Mail</th>
            <th></th>
            <th></th>
        </thead>
        <tbody>
            {{#each patients}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.phone}}</td>
                <td>{{this.email}}</td>
                <td><a href="/patients/edit/{{this.patient_id}}" class="btn btn-warning">Edit</a></td>
                <td><a href="/patients/delete/{{this.patient_id}}" class="btn btn-danger">Delete</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<a href="/patients/create" class="btn btn-primary">Create Patient</a>
{{/block}}

{{/extends}}