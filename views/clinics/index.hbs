{{#extends "base"}}

{{#block "title"}}
Clinics
{{/block}}


{{#block "content"}}
<h2>Clinics</h2>
<form method="post">
    <div class="row my-4">
        <div class="col-auto">
            <label class="col-form-label">Search:</label>
        </div>
        <div class="col-auto">
            <input type="text" name="search" id="search" class="form-control">
        </div>
        <div class="col-auto">
            <input type="submit" value="Search" class="btn btn-primary">
            <a href="/clinics" class="btn btn-primary">Reset</a>
        </div>
    </div>
</form>
<div class="table-responsive">
    <table class="table table-striped table-dark table-hover align-middle">
        <thead>
            <th>Clinic Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Schedule</th>
            <th></th>
            <th></th>
        </thead>
        <tbody>
            {{#each clinics}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.block}} {{this.road}} #{{this.unit}} ({{this.postal_code}})</td>
                <td>{{this.phone}}</td>
                <td>{{this.email}}</td>
                <td><a href="/clinics/schedule/{{this.schedule_id}}" class="btn btn-light">View Schedule</a></td>
                <td><a href="/clinics/edit/{{this.clinic_id}}" class="btn btn-warning">Edit</a></td>
                <td><a href="/clinics/delete/{{this.clinic_id}}" class="btn btn-danger">Delete</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<a href="/clinics/create" class="btn btn-primary">Create Clinic</a>
{{/block}}

{{/extends}}